		"e2e": "pnpm --filter e2e test",
		"benchmark": "pnpm --filter benchmark test"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^5.4.1",
		"@types/node": "^24.7.2",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "^9.37.0",
		"jiti": "^2.6.1",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"protobufjs",
			"sharp"
		]
	}
